{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "Deploys a secure persona bot application with Azure OpenAI integration using Managed Identity and enhanced security controls"
  },
  "parameters": {
    "environmentName": {
      "type": "string",
      "defaultValue": "dev",
      "metadata": {
        "description": "Environment name (e.g., dev, staging, prod)"
      }
    },
    "uniqueSuffix": {
      "type": "string",
      "defaultValue": "[uniqueString(resourceGroup().id)]",
      "metadata": {
        "description": "Unique suffix for resource names"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "appServicePlanSku": {
      "type": "string",
      "defaultValue": "B1",
      "allowedValues": [
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1v2",
        "P2v2",
        "P3v2"
      ],
      "metadata": {
        "description": "SKU for the App Service Plan"
      }
    },
    "openAiApiVersion": {
      "type": "string",
      "defaultValue": "2024-08-01-preview",
      "metadata": {
        "description": "API version for Azure OpenAI"
      }
    },
    "openAiModelName": {
      "type": "string",
      "defaultValue": "gpt-4",
      "metadata": {
        "description": "Name of the OpenAI model to deploy"
      }
    },
    "openAiModelVersion": {
      "type": "string",
      "defaultValue": "0613",
      "metadata": {
        "description": "Version of the OpenAI model to deploy"
      }
    },
    "enableAdvancedSecurity": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Enable advanced security features like diagnostic logging and Application Insights"
      }
    },
    "restrictPublicNetworkAccess": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Restrict public network access to OpenAI (requires private endpoints for production)"
      }
    }
  },
  "variables": {
    "resourcePrefix": "[concat('persona-bot-', parameters('environmentName'), '-', parameters('uniqueSuffix'))]",
    "openAiAccountName": "[concat(variables('resourcePrefix'), '-openai')]",
    "openAiDeploymentName": "[concat(parameters('openAiModelName'), '-deployment')]",
    "appServicePlanName": "[concat(variables('resourcePrefix'), '-plan')]",
    "webAppName": "[concat(variables('resourcePrefix'), '-webapp')]",
    "applicationInsightsName": "[concat(variables('resourcePrefix'), '-ai')]"
  },
  "resources": [
    {
      "condition": "[parameters('enableAdvancedSecurity')]",
      "type": "Microsoft.Insights/components",
      "apiVersion": "2020-02-02",
      "name": "[variables('applicationInsightsName')]",
      "location": "[parameters('location')]",
      "kind": "web",
      "properties": {
        "Application_Type": "web",
        "publicNetworkAccessForIngestion": "Enabled",
        "publicNetworkAccessForQuery": "Enabled"
      }
    },
    {
      "type": "Microsoft.CognitiveServices/accounts",
      "apiVersion": "2021-04-30",
      "name": "[variables('openAiAccountName')]",
      "location": "[parameters('location')]",
      "kind": "OpenAI",
      "sku": {
        "name": "S0"
      },
      "properties": {
        "customSubDomainName": "[variables('openAiAccountName')]",
        "publicNetworkAccess": "[if(parameters('restrictPublicNetworkAccess'), 'Disabled', 'Enabled')]",
        "networkAcls": {
          "defaultAction": "[if(parameters('restrictPublicNetworkAccess'), 'Deny', 'Allow')]"
        },
        "disableLocalAuth": true
      }
    },
    {
      "type": "Microsoft.CognitiveServices/accounts/deployments",
      "apiVersion": "2021-10-01",
      "name": "[concat(variables('openAiAccountName'), '/', variables('openAiDeploymentName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.CognitiveServices/accounts', variables('openAiAccountName'))]"
      ],
      "properties": {
        "model": {
          "format": "OpenAI",
          "name": "[parameters('openAiModelName')]",
          "version": "[parameters('openAiModelVersion')]"
        },
        "raiPolicyName": "Microsoft.Default",
        "scaleSettings": {
          "scaleType": "Standard"
        }
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2021-02-01",
      "name": "[variables('appServicePlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('appServicePlanSku')]",
        "capacity": 1
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "name": "[variables('webAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "[resourceId('Microsoft.CognitiveServices/accounts', variables('openAiAccountName'))]",
        "[resourceId('Microsoft.Insights/components', variables('applicationInsightsName'))]"
      ],
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "httpsOnly": true,
        "siteConfig": {
          "linuxFxVersion": "PYTHON|3.11",
          "appCommandLine": "python -m streamlit run webapp/app.py --server.port 8000",
          "minTlsVersion": "1.2",
          "ftpsState": "Disabled",
          "remoteDebuggingEnabled": false,
          "httpLoggingEnabled": true,
          "detailedErrorLoggingEnabled": true,
          "requestTracingEnabled": true,
          "appSettings": [
            {
              "name": "AZURE_OPENAI_ENDPOINT",
              "value": "[reference(resourceId('Microsoft.CognitiveServices/accounts', variables('openAiAccountName'))).endpoint]"
            },
            {
              "name": "AZURE_OPENAI_API_VERSION",
              "value": "[parameters('openAiApiVersion')]"
            },
            {
              "name": "AZURE_OPENAI_DEPLOYMENT_NAME",
              "value": "[variables('openAiDeploymentName')]"
            },
            {
              "name": "SCM_DO_BUILD_DURING_DEPLOYMENT",
              "value": "true"
            },
            {
              "name": "ENABLE_ORYX_BUILD",
              "value": "true"
            },
            {
              "name": "POST_BUILD_SCRIPT_PATH",
              "value": "post-build.sh"
            },
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[if(parameters('enableAdvancedSecurity'), reference(resourceId('Microsoft.Insights/components', variables('applicationInsightsName'))).InstrumentationKey, '')]"
            },
            {
              "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
              "value": "[if(parameters('enableAdvancedSecurity'), reference(resourceId('Microsoft.Insights/components', variables('applicationInsightsName'))).ConnectionString, '')]"
            },
            {
              "name": "STREAMLIT_SERVER_ENABLE_CORS",
              "value": "false"
            },
            {
              "name": "STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION",
              "value": "true"
            }
          ]
        },
        "clientAffinityEnabled": false
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "roleAssignmentDeployment",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', variables('webAppName'))]",
        "[resourceId('Microsoft.CognitiveServices/accounts', variables('openAiAccountName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "type": "Microsoft.Authorization/roleAssignments",
              "apiVersion": "2020-04-01-preview",
              "name": "[guid(resourceId('Microsoft.Web/sites', variables('webAppName')), resourceId('Microsoft.CognitiveServices/accounts', variables('openAiAccountName')), 'Cognitive Services OpenAI User')]",
              "scope": "[resourceId('Microsoft.CognitiveServices/accounts', variables('openAiAccountName'))]",
              "properties": {
                "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', '5e0bd9bd-7b93-4f28-af87-19fc36ad61bd')]",
                "principalId": "[reference(resourceId('Microsoft.Web/sites', variables('webAppName')), '2021-02-01', 'full').identity.principalId]",
                "principalType": "ServicePrincipal"
              }
            }
          ]
        }
      }
    },
    {
      "condition": "[parameters('enableAdvancedSecurity')]",
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2015-11-01-preview",
      "name": "[concat(variables('resourcePrefix'), '-logs')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "name": "PerGB2018"
        }
      }
    }
  ],
  "outputs": {
    "webAppUrl": {
      "type": "string",
      "value": "[concat('https://', reference(resourceId('Microsoft.Web/sites', variables('webAppName'))).defaultHostName)]",
      "metadata": {
        "description": "The URL of the deployed web application"
      }
    },
    "openAiAccountName": {
      "type": "string",
      "value": "[variables('openAiAccountName')]",
      "metadata": {
        "description": "The name of the Azure OpenAI resource"
      }
    },
    "openAiEndpoint": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.CognitiveServices/accounts', variables('openAiAccountName'))).endpoint]",
      "metadata": {
        "description": "The endpoint URL of the Azure OpenAI resource"
      }
    },
    "openAiDeploymentName": {
      "type": "string",
      "value": "[variables('openAiDeploymentName')]",
      "metadata": {
        "description": "The deployment name for the OpenAI model"
      }
    },
    "webAppPrincipalId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Web/sites', variables('webAppName')), '2022-09-01', 'full').identity.principalId]",
      "metadata": {
        "description": "The principal ID of the web app managed identity"
      }
    },
    "webAppName": {
      "type": "string",
      "value": "[variables('webAppName')]",
      "metadata": {
        "description": "The name of the web application"
      }
    },
    "applicationInsightsName": {
      "type": "string",
      "value": "[if(parameters('enableAdvancedSecurity'), variables('applicationInsightsName'), '')]",
      "metadata": {
        "description": "The name of the Application Insights resource"
      }
    }
  }
}